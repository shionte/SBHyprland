#!/bin/bash

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø—Ä–∞–≤ root
if [ "$(id -u)" != "0" ]; then
    echo "–ó–∞–ø—É—Å—Ç–∏—Ç–µ —Å–∫—Ä–∏–ø—Ç —Å –ø—Ä–∞–≤–∞–º–∏ root: sudo $0"
    exit 1
fi

case "$1" in
    start)
        echo "üîß –ó–∞–ø—É—Å–∫–∞–µ–º —Å–µ—Ç—å –¥–ª—è QEMU..."
        systemctl start libvirtd
        virsh net-start default
        echo "‚úÖ –°–µ—Ç—å –¥–ª—è QEMU –∑–∞–ø—É—â–µ–Ω–∞"
        ;;
    stop)
        echo "üõë –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Å–µ—Ç—å QEMU..."
        virsh net-destroy default
        echo "‚úÖ –°–µ—Ç—å QEMU –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞"
        ;;
    *)
        echo "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: sudo $0 {start|stop}"
        exit 1
esac
