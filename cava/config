# ~/.config/cava/config

[general]
# Фреймрейт
framerate = 60

# Количество баров
bars = 40

# Автоматическая чувствительность
autosens = 1

# Сглаживание
smoothing = 0.5

[input]
# Выбор метода захвата звука
method = pulse
source = auto

[output]
# Используем метод ncurses для вывода
method = ncurses

# Ориентация (горизонтальные бары)
orientation = horizontal

# Размер и пробел между барами
bar_width = 1
bar_spacing = 1

[color]
# Подключение цветов от pywal для фона и текста
foreground = $(cat ~/.cache/wal/colors | head -n 1)
background = black

# Включаем градиент
gradient = 1

# Определяем дополнительные градиентные цвета
# Если необходимо, можно добавить больше цветов
gradient_color_1 = '#59cc33'
gradient_color_2 = '#80cc33'
gradient_color_3 = '#a6cc33'
gradient_color_4 = '#cccc33'
gradient_color_5 = '#cca633'
gradient_color_6 = '#cc8033'
gradient_color_7 = '#cc5933'
gradient_color_8 = '#cc3333'

[smoothing]
# Параметры сглаживания
integral = 77
monstercat = 0
waves = 0

# Настройки для уменьшения шума
noise_reduction = 77

[eq]
# Эквалайзер с параметрами для частот
1 = 1 # бас
2 = 1
3 = 1 # средние частоты
4 = 1
5 = 1 # высокие частоты
